{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ucp.dev/schemas/shopping/types/pagination.json",
  "title": "Pagination",
  "description": "Cursor-based pagination for list operations.",
  "type": "object",
  "$defs": {
    "request": {
      "type": "object",
      "description": "Pagination parameters for requests.",
      "properties": {
        "cursor": {
          "type": "string",
          "description": "Opaque cursor from previous response."
        },
        "limit": {
          "type": "integer",
          "minimum": 1,
          "default": 10,
          "description": "Requested page size. Implementations MAY clamp to a lower maximum."
        }
      }
    },
    "response": {
      "type": "object",
      "description": "Pagination information in responses.",
      "properties": {
        "cursor": {
          "type": "string",
          "description": "Cursor to fetch the next page of results."
        },
        "has_next_page": {
          "type": "boolean",
          "description": "Whether more results are available."
        },
        "total_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of matching items (if available)."
        }
      }
    }
  }
}
