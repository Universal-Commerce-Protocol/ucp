{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ucp.dev/schemas/shopping/types/fulfillment_destination_req.json",
  "title": "Fulfillment Destination Request",
  "description": "A destination for fulfillment.",
  "type": "object",
  "oneOf": [
    {
      "$ref": "#/$defs/shipping_destination"
    },
    {
      "$ref": "retail_location_req.json"
    }
  ],
  "$defs": {
    "shipping_destination": {
      "title": "Shipping Destination Request",
      "description": "Shipping destination.",
      "allOf": [
        {
          "$ref": "postal_address.json"
        },
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "description": "ID specific to this shipping destination."
            }
          },
          "required": [
            "id"
          ]
        }
      ]
    }
  }
}
